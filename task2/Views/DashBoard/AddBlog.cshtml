@model Blog
@{
    Layout = "_DashBoard";
}


<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Adding Blog</span>
        </div>

        <div>
            <form method="post" asp-action="AddBlog" class="row">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Blog Name</label>
                    <input type="text"
                           asp-for="Name"
                           class="form-control"
                           placeholder="" />

                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Blog Description</label>
                    <textarea asp-for="Description"
                              type="text"
                              class="form-control"
                              placeholder=""></textarea>
                </div>

                <div class="mb-3 col-lg-6">
                    <label asp-for="TypeId" class="form-label">Type of Blog</label>
                    <select class="form-select "
                            asp-for="TypeId">
                        <option selected>Select one</option>
                        <option value="1">Action</option>
                        <option value="2">Comidy</option>
                    </select>
                </div>

                <div class="col-lg-12 d-flex justify-content-center">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>