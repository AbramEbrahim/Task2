@model Product
@{
    Layout = "_DashBoard";
}


<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Adding Product</span>
        </div>

        <div>
            <form method="post" asp-action="AddProduct" class="row">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Product Name</label>
                    <input type="text"
                           asp-for="Name"
                           class="form-control"
                           placeholder="" />

                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Product Description</label>
                    <textarea asp-for="Description"
                              type="text"
                              class="form-control"
                              placeholder=""></textarea>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Quantity" class="form-label">Product Quantity</label>
                    <input type="number"
                           asp-for="Quantity"
                           class="form-control"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="price" class="form-label">Product Price</label>
                    <input type="number"
                           asp-for="price"
                           class="form-control"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                    <div class="form-check">
                        <label asp-for="EnablSize" class="form-check-label" > Enable Product Size </label>
                        <input asp-for="EnablSize" class="form-check-input" type="checkbox">
                    </div>


                </div>

                <div class="mb-3 col-lg-6">
                    <label  asp-for="CompanyId" class="form-label">company</label>
                    <select class="form-select "
                            asp-for="CompanyId">
                        <option selected>Select one</option>
                        <option value="1">nike</option>
                        <option value="2">adidas</option>
                    </select>
                </div>

                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>