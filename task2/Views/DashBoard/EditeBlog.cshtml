@model Blog

@{
    Layout = "_DashBoard";
}



<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Edit Blog</span>
        </div>

        <>
            <form method="post" asp-action="EditeBlog" class="row">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Blog Name</label>
                    <input type="text"
                           asp-for="Name"
                           class="form-control"
                           value="@Model.Name"
                           placeholder="" />

                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Blog Description</label>
                    <textarea asp-for="Description"
                              type="text"
                              class="form-control"
                              placeholder="">
                        @Model.Description
                          </textarea>
                </div>
                
                
                <div class="mb-3 col-lg-6">
                    <label asp-for="TypeId" class="form-label">Type</label>
                    <select class="form-select "
                            asp-for="TypeId">
                        @{
                            if (Model.TypeId == 1)
                            {
                                <option>Select one</option>
                                <option selected value="1">action</option>
                            <option value="2">comidy</option>
                            }
                            else if (Model.TypeId == 2)
                            {
                                <option>Select one</option>
                                <option value="1">action</option>
                                <option selected value="2">comidy</option>
                            }
                            else
                            {
                            <option selected>Select one</option>
                            <option value="1">action</option>
                            <option value="2">comidy</option>
                            }
                        }

                    </select>
                </div>

                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>

