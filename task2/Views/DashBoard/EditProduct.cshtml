@model Product
@{
    Layout = "_DashBoard";
}


<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Edit Product</span>
        </div>

        <div>
            <form method="post" asp-action="EditProduct" class="row">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Product Name</label>
                    <input type="text"
                           asp-for="Name"
                           class="form-control"
                           value="@Model.Name"
                           placeholder="" />

                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Product Description</label>
                    <textarea asp-for="Description"
                              type="text"
                              class="form-control"
                              placeholder="">
                          @Model.Description
                          </textarea>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Quantity" class="form-label">Product Quantity</label>
                    <input type="number"
                           asp-for="Quantity"
                           class="form-control"
                           value="@Model.Quantity"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="price" class="form-label">Product Price</label>
                    <input type="number"
                           asp-for="price"
                           class="form-control"
                           value="@Model.price"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                    <div class="form-check">
                        <label asp-for="EnablSize" class="form-check-label"> Enable Product Size </label>
                        <input asp-for="EnablSize" class="form-check-input" value="@Model.EnablSize type="checkbox">
                    </div>


                </div>

                <div class="mb-3 col-lg-6">
                    <label asp-for="company.Id" class="form-label">company</label>
                    <select class="form-select "
                            asp-for="company.Id">
                        @{
                            if (Model.company.Id == 1){
                                <option >Select one</option>
                                <option selected value="1">nike</option>
                                <option value="2">adidas</option>
                            }
                            else if (Model.company.Id == 2)
                            {
                                <option>Select one</option>
                                <option  value="1">nike</option>
                                <option selected value="2">adidas</option>
                            }
                            else
                            {
                                <option selected>Select one</option>
                                <option value="1">nike</option>
                                <option  value="2">adidas</option>
                            }
                        }
                        
                    </select>
                </div>

                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>